{{! Maintainers - Kevin Corry}}
<div class="hotgraphic-inner component-inner" role="region" aria-label="{{_accessibility._ariaRegions.hotGraphic}}">
  {{> component this}}
  <div class="hotgraphic-widget component-widget">

    <div class="hotgraphic-graphic">

      <div class="hotgraphic-popup" role="dialog" aria-label="{{_accessibility._ariaLabels.hotgraphicPopUp}}">

        <div class="hotgraphic-popup-toolbar component-item-color clearfix">
          <div class="hotgraphic-popup-nav component-item-color">
            <a href="#" class="hotgraphic-popup-controls back" aria-label="{{_accessibility._ariaLabels.previous}}">
              <div class="hotgraphic-popup-arrow-l component-item-text-color icon icon-controls-small-left" role="button"></div>
            </a>
            <div class="hotgraphic-popup-count component-item-text-color">
              <span class="current">1</span>/<span class="total">3</span>
            </div>
            <a href="#" class="hotgraphic-popup-controls next" aria-label="{{_accessibility._ariaLabels.next}}" role="button">
              <div class="hotgraphic-popup-arrow-r component-item-text-color icon icon-controls-small-right"></div>
            </a>
          </div>
          <a href="#" class="hotgraphic-popup-done" aria-label="{{_accessibility._ariaLabels.closePopup}}" role="button">
            <div class="hotgraphic-popup-close component-item-text-color icon icon-cross"></div>
          </a>
        </div>

        <div class="hotgraphic-popup-inner clearfix">
          {{#each _items}}
          <div class="hotgraphic-item component-item item-{{@index}}">
            <div class="hotgraphic-item-graphic">
              <div class="hotgraphic-item-graphic-inner">
                <img src="{{_graphic.src}}" alt="{{_graphic.alt}}"/>
              </div>
            </div>
            <div class="hotgraphic-item-body">
              <div class="hotgraphic-item-body-inner">
                <h5>
                  {{{title}}}
                </h5>
                <p>
                  {{{body}}}
                </p>
              </div>
            </div>
          </div>
          {{/each}}
        </div>

      </div>

      <img src="{{_graphic.src}}" alt="{{_graphic.alt}}"/>
      {{#each _items}}
      <a href="#" class="hotgraphic-graphic-pin component-item-text-color {{#if _isVisited}}visited{{/if}}" data-id="item-{{@index}}" style="top:{{{_top}}}%; left:{{{_left}}}%;" role="button" aria-label="{{pinAlt}}">
        <div class="hotgraphic-graphic-pin-icon component-item-color icon icon-pin"></div>
      </a>
      {{/each}}
    </div>
  </div>
</div>
